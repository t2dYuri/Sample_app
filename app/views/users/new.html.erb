<% provide(:title, 'Sign up') %>
<% breadcrumb :register %>
<h1>Sign up</h1>
<%#= render 'shared/error_messages' %>
<div class="hero-unit">
 <div class="row">
  <div class="col-md-8 col-md-offset-4">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %><br />
        <%= f.text_field :name, class:"input1" %><br />
        <%= f.label :email %><br />
        <%= f.text_field :email, class:"input1" %><br />
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"input1" %><br />
        <%= f.label :password_confirmation, "Confirmation" %><br />
        <%= f.password_field :password_confirmation, class:"input1" %><br />
        <%= f.submit "Создать пользователя", class: "btn btn-primary" %>
    <% end %>
  </div>
 </div>
</div>




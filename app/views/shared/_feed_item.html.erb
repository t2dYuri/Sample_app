<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user, size: 52), feed_item.user %>
  <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
  <span class="content"><%= feed_item.content %></span>
    <h6 class="timestamp">
      <em>Отправлено <%= time_ago_in_words(feed_item.created_at) %> назад.</em>

  <% if current_user?(feed_item.user) %>
      <%= link_to "удалить", feed_item, method: :delete, data: { confirm: "Вы уверны?" }, title: feed_item.content, class: "btn btn-primary btn-xs" %></h6>
  <% end %>
</li>
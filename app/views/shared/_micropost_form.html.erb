<%= form_for(@micropost) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Ваше сообщение..." %>
    </div>
    <span style="text-align: center;"><%= f.submit "Отправить", class: "btn btn-large btn-primary" %></span>
<% end %>
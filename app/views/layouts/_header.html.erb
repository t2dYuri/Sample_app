<header class="navbar navbar-static-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container" align="center">
      <%= link_to image_tag("s5_logo.png", alt: "Rails"), root_path %>
      <nav class="btn-group">
          <%= link_to "Home",    root_path, class: "btn btn-primary"%>
          <%= link_to "Help",    help_path, class: "btn btn-primary" %>
        <% if signed_in? %>
            <%= link_to "Users", '#', class: "btn btn-primary" %>
              <a href="#" class="dropdown-toggle btn btn-primary" data-toggle="dropdown">Account <b class="caret"></b></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
        <% else %>
            <%= link_to "Enter", signin_path, class: "btn btn-primary" %>
        <% end %>
      </nav>
    </div>
  </div>
</header>